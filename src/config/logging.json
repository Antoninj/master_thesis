{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "simple": {
            "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
        }
    },

    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "DEBUG",
            "formatter": "simple",
            "stream": "ext://sys.stdout"
        },

        "info_file_handler": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "INFO",
            "formatter": "simple",
            "filename": "log/info.log",
            "maxBytes": 10485760,
            "backupCount": 20,
            "encoding": "utf8",
            "delay": "True"
        },

        "error_file_handler": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "ERROR",
            "formatter": "simple",
            "filename": "log/errors.log",
            "maxBytes": 10485760,
            "backupCount": 20,
            "encoding": "utf8",
            "delay": "True"
        }
    },

    "loggers": {
        "pipeline": {
            "level": "ERROR",
            "handlers": ["error_file_handler"],
            "propagate": "no"
        },
        "feature extraction": {
            "level": "INFO",
            "handlers": ["info_file_handler","console"],
            "propagate": "no"
        },
        "tests": {
            "level": "DEBUG",
            "handlers": ["console"],
            "propagate": "no"
        },
        "stats": {
            "level": "INFO",
            "handlers": ["info_file_handler","console"],
            "propagate": "no"
        }

    }
}
